<div class="team-index"><span style="color: rgba(0,0,0,0)">.</span>

  <div class="row information">
    <h1>Featured Teams</h1>
    <ul id="team-index-list">
      <% @team_data.each do |team| %>
      <div class="panel radius">
        <div id="team-index-list-item">
        <li><%= link_to "#{team[:tier]}", team_path(team) %><br>
          Created by: <%= link_to "#{team[:creator]}", user_path(@user) %><br>
        <%= "  #{team[:about]}" %></li>
      </div>
      </div>

      <% end %>
    </ul>
    <div id="create-team">
      <%= link_to "Create a Team", new_team_path, class: "button" %>
    </div>
  </div>
</div>
