<div class="team-index"><span style="color: rgba(0,0,0,0)">.</span>

  <div class="row information">
    <h1>Featured Teams</h1>
    <ul>
      <% @teams.each do |team| %>
      <div class="panel radius">
        <li><%= link_to team.rank, team_path(team) %><br>
        <%= "  #{team.about}" %></li>
      </div>

      <% end %>
    </ul>

      <%= link_to "Create a Team", new_team_path, class: "button", id: "create-team" %>

  </div>
</div>
