<div class="team-index"><span style="color: rgba(0,0,0,0)">.</span>

  <div class="row information">
    <h1>Featured Teams</h1>
    <ul id="team-index-list">
      <!-- Some logic to set up valid teams for user -->
      <% if current_user %>
        <% @tier_hash.each do |k,v| %>
          <% if v == current_user.tier %>
            <% @first  = @tier_hash[k-1] %>
            <% @second = @tier_hash[k  ] %>
            <% @third  = @tier_hash[k+1] %>
          <% end %>
        <% end %>
      <% end %>

      <!-- Displays teams based on user's tier -->
      <% @team_data.each do |team| %>
        <% if team[:tier] == @first || team[:tier] == @second || team[:tier] == @third %>
        <div class="panel radius">
          <li><%= link_to "#{team[:tier]}", team_path(team) %><br>
            Created by: <%= link_to "#{team[:creator]}", user_path(@user) %><br>
          <%= "  #{team[:about]}" %></li>
        </div>
        <% elsif current_user == nil %>
        <div class="panel radius">
          <li><%= link_to "#{team[:tier]}", team_path(team) %><br>
            Created by: <%= link_to "#{team[:creator]}", user_path(@user) %><br>
            <%= "  #{team[:about]}" %></li>
        </div>
        <% elsif team[:tier] != @first || team[:tier] != @second || team[:tier] != @third %>
        <div class="panel radius">
          <li><%=  "#{team[:tier]}" %> -  You are not eligible for this team due to rank requirements.<br>
            Created by: <%= link_to "#{team[:creator]}", user_path(@user) %><br>
            <%= "  #{team[:about]}" %></li>
          </div>
        <% end %>
      <% end %>
    </ul>
    <div id="create-team">
      <%= link_to "Create a Team", new_team_path, class: "button" %>
    </div>
  </div>
</div>
