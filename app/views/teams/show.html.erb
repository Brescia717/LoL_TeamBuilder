<div class="team-show"><span style="color: rgba(0,0,0,0)">.</span>

<div class="row information">
  <h1 class="panel callout radius" style="text-align: center;">
    <%= link_to "#{@team.user.summoner_name}'s Team", user_path(@team.user) %>
  </h1>
  <h3><%= @team.rank %></h3>
  <div class="panel" id="team-show-panel">
    <p>
      <%= @team.about %><br />
      Primary Role: <%= @team.user.primary_role.capitalize %><br />
      Secondary Role: (<%= @team.user.secondary_role.capitalize %>)
    </p>
  </div>
</div>
<div class="row" id="edit-delete-team-buttons">
  <% if current_user == @team.user %>
    <%= link_to "Edit", edit_team_path(@team), class: "button left tiny edit" %>
    <%= link_to "Delete", team_path(@team),
          method: :delete,
          data: { confirm: 'Are you sure you want to delete this team?' },
          class: "button tiny delete" %><br>
  <% end %>
</div>
<hr>

<div class="row">
    <!-- <div class="large-offset-1 large-10 columns reviews"> -->
      <% if @comment %>
      <h2 class="panel all-comments" style="text-align: center;"> All Comments For <%= @team.user.summoner_name %>'s Team </h2>
        <% @comments.each do |comment| %>
          <div class="title">
            <div class="panel" id="comment">
              <p>
                Written by: <%= link_to comment.user.summoner_name.capitalize,
                                user_path(comment.user), class: "user-prof-link" %>
              </p>
              <article class="comment-body">
                <%= comment.body %><br><br>
              </article>
            </div>
          </div>
          <div id="edit-delete-comment-buttons">
            <% if comment.owner?(current_user) %>
              <%= link_to 'Edit', edit_team_comment_path(@team, comment),
                    class: "button tiny edit" %>
              <%= link_to 'Delete', team_comment_path(@team, comment),
                    method: :delete,
                    data: {confirm: 'Are you sure you want to delete comment?'},
                    class: "button tiny delete" %>
            <% end %>
          </div>

        <% end %>
      <% end %>
    <!-- </div> -->
  </div>
  <hr>

  <div class="row">
    <div class="large-offset-1 large-10 columns write">
    <h2 class="panel add-comments">Write A Comment For <%= @team.user.summoner_name %>'s Team</h2>

    <% if current_user %>
      <%= form_for [@team, @comment] do |f| %>
        <% if @comment.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@comment.errors.count, "error") %> prohibited
              this comment from being saved:</h2>
            <ul>
              <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

          <p>
            <%= f.label :body  %><br>
            <%= f.text_field :body %>
          </p>

          <%= f.submit 'Create Comment', class: "button" %>
        <% end %>
      <% end %>

      <% if !current_user %>
        <%= link_to 'If you want to leave a comment, please log in.',
            new_user_session_path, class: "button alert center" %>
      <% end %>

    </div>
  </div>
  <hr>
  <%= link_to "Back", teams_path, class: "button tiny", id: "back-button" %>
</div>
</div>
