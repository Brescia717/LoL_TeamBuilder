<div class="row information">
  <h1>Edit Comment on <%= @comment.build.title %></h1>

  <% if current_user %>
    <%= form_for [@comment.build, @comment] do |f| %>
      <% if @comment.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@comment.errors.count, "error") %> prohibited
              this review from being saved:</h2>
            <ul>
              <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end%>
      <p>
        <%= f.label :body  %><br>
        <%= f.text_field :body %>
      </p>

      <%= f.submit "Update Comment", class: "button" %>
    <% end %>
  <% end %>

</div>
