<div class="row information">
  <h1 style="text-align: center;"><%= @build.title %></h1>
  <h4>By: <%= @build.user.username %></h4>

  <h3><%= @build.champion %></h3>
  <p>
    <%= @build.about %>
  </p>

  <p>
    <%= @build.tips %>
  </p>

  <% if current_user == @build.user %>
    <%= link_to "Edit", edit_build_path(@build), class: "button tiny edit" %>
    <%= link_to "Delete", build_path(@build),
        method: :delete,
        data: {confirm: 'Are you sure you want to delete this build?'},
        class: "button tiny delete" %>
  <% end %>
</div>

<div class="row">
    <div class="large-offset-1 large-10 columns reviews">
      <% if @build_comments %>
      <h2> All Comments For <%= @build.title %> </h2>
        <% @build_comments.each do |comment| %>
          <div class="title">
            <h3>
              <button class="tiny">
                <%= @build.score %> Upvotes
              </button>
            </h3>
            <p>
              <em>Written by: <%= link_to comment.user.username, user_path(comment.user) %></em>
            </p>
          </div>

          <article class="comment-body">
            <%= comment.body %>

            <% if comment.owner?(current_user) %>
              <%= link_to 'Edit', edit_build_comment_path(@build, comment), class: "button tiny edit" %>
              <%= link_to 'Delete', build_comment_path(@build, comment), method: :delete, data: {confirm: 'Are you sure you want to delete comment?'}, class: "button tiny delete" %>
            <% end %>

            <% if comment.upvoted?(current_user) %>
              <%= link_to 'Downvote', build_comment_downvote_path(@build, comment), method: :post, class: "downvote button primary tiny" %>
            <% else %>

              <%= link_to 'Upvote', build_comment_upvote_path(@build, comment), method: :post, class: "upvote button alert tiny" %>
            <% end %>
          </article>
        <% end %>
      <% end %>
    </div>
  </div>

  
